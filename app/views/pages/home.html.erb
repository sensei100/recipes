<div class="jumbotron">
  <div class="container center">
    <h1 id="site-title">Welcome to My Recipes</h1>
    <h2 id="site-subtitle">Online storage for your favorite recipes</h2>
     <%= link_to 'Sign up now!', register_path, class: "btn btn-lg btn-success", id: "sign-up" %>
  </div>
</div>

<div class="row">
  <div class="col-lg-6">
    <h3 class="midrow">View recipes as guest user</h3>
    <h2 class="left">Browse and view recipes as a guest and Sign up later</h2>
    <p><%= link_to "Browse Recipes", recipes_path, class: "btn btn-warning btn-small" %></p>
  </div>
  
  <div class="col-lg-6">
    <h3 class="midrow">Sign in to your account</h3>
    <ul>
      <li><h2 class="left">Add or update your recipes.</h2></li>
      <li><h2 class="left">Create reviews.</h2></li>
      <li><h2 class="left">Like or dislike recipes and much more!</h2></li>
    </ul>
    <p><%= link_to "Log In", login_path, class: "btn btn-warning btn-small" %></p>
  </div>
 </div>